        <input class="form-control" type="text" id="data-<%=cnt%>" style="width:200px;" name="data[<%= cnt %>]" placeholder="説明" onKeyPress="return submitStop(event);">
        <input type="checkbox" name="multi[<%=cnt%>]" id="multi-<%=cnt%>" onclick='multi(<%=cnt%>)'>被
        <br>
        <div class="multi-plus-<%=cnt%>"></div>
    <% } %>
