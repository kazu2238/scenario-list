</style>
<script>
$(function() {
  $('#sample').popover({
      html: true, // HTMLオプションをtrueにする
      content: '<table class="sample" border="1"><% (1..5).each{|c| %><tr><td class="sample">00<%=c%></td><td class="sample">名前</td><td>セリフ セリフ セリフ セリフ セリフ </td></tr><% } %></table>'
        });
        });

var cnt = 5;
var multi_cnt = []

function inputPlus(){
  $("#coloring-plus").append('<input class="form-control name-'+cnt+'" type="text" name="name[' + cnt +']" style="width:160px;" placeholder="名前" onKeyPress="return submitStop(event);"> <input class="color-' + cnt + ' color-picker" type="color" list="exlist" name="color[' + cnt +']" onChange="getColor(' + cnt +');" > <select class="form-control" name="sex['+ cnt +']"><option value="men">男性</option><option value="women">女性</option><option value="humon">不問</option></select> <input class="form-control" type="text" id="data-'+cnt+'" style="width:200px;" name="data['+ cnt +']" placeholder="説明" onKeyPress="return submitStop(event);"> <input type="checkbox" name="multi['+cnt+']" id="multi-'+cnt+'" onclick="multi('+cnt+')"<% if @style_change %> checked<%end%>>被<br><div class="multi-plus-'+cnt+'"></div>');
  cnt = cnt + 1;
}

function submitStop(e){
  if (!e) var e = window.event;

  if(e.keyCode == 13)
    return false;
}

function getColor(cnt){
  var colorCode = $('.color-' + cnt).val();
  $('.name-'+cnt).css('color',colorCode);
}

function multi(n){
  if($('#multi-' + n).prop('checked')){
    $('.multi-plus-' + n).show();
  }else{
    $('.multi-plus-' + n).hide();
  }
  if($('.multi-plus-'+ n).text() == ''){
    multi_cnt[n] = 0;
  $('.multi-plus-' + n).append(' Ｌ<input class="form-control name-'+n+'" type="text" name="multi-name['+n+'][0]" style="width:160px;" placeholder="名前" onKeyPress="return submitStop(event);"><select class="form-control" name="multi-sex['+n+'][0]"><option value="men">男性</option><option value="women">女性</option><option value="humon">不問</option></select> <input class="form-control" type="text" id="multi-data-'+n+'" style="width:200px;" name="multi-data['+n+'][0]" placeholder="説明" onKeyPress="return submitStop(event);"><button type="button" class="btn btn-xs btn-primary multi-btn-'+n+'-0" onClick="multiPlus('+n+');">+</button><br>');
  }
  getColor(n);
}

function multiPlus(n,m = 0){
  if(!multi_cnt[n]){
    multi_cnt[n] = m;
  }
  $('.multi-btn-'+n+'-'+multi_cnt[n]).hide();
  multi_cnt[n] += 1;
  var m_n = multi_cnt[n];
  $('.multi-plus-' + n).append(' Ｌ<input class="form-control name-'+n+'" type="text" name="multi-name['+n+']['+m_n+']" style="width:160px;" placeholder="名前" onKeyPress="return submitStop(event);"><select class="form-control" name="multi-sex['+n+']['+m_n+']"><option value="men">男性</option><option value="women">女性</option><option value="humon">不問</option></select> <input class="form-control" type="text" id="multi-data-'+n+'-'+m_n+'" style="width:200px;" name="multi-data['+n+']['+m_n+']" placeholder="説明" onKeyPress="return submitStop(event);"><button type="button" class="btn btn-xs btn-primary multi-btn-'+n+'-'+m_n+'" onClick="multiPlus('+n+','+m_n+');">+</button><br>');
  getColor(n);
}

</script>

<% provide(:title, "Screate") %>
<div id="main-contents">
