<style>
#search{
  float:right;
  margin-right:10px;
}
</style>

<div id="header">
  <div class="inline">
    <form class="form-horizontal row col-auto" name="search" action='search' method='get'>
      <a href="/" class="btn btn-info btn-sm col-auto">HOME</a>
      <div class="col-auto">
        <select name='scenario_list' class="form-control">
          <option value='jericho941' <%
          if @scenario_list == "jericho941"
            %>selected<%
          end
          %>>jericho941</option>
          <option value='nishitetu' <%
          if @scenario_list == "nishitetu"
            %>selected<%
          end
          %>>西鉄台本</option>
          <option value='lavina' <%
          if @scenario_list == "lavina"
            %>selected<%
          end
          %>>ラヴィーナ</option>
          <option value='news' <%
          if @scenario_list == "news"
            %>selected<%
          end
          %>>NEWS</option>
        </select>
      </div>
      <div class="col-auto">
        <select name='unchecked' class="form-control">
          <option value='all' <% if @unchecked == "all" %>selected<% end %>>全て</option>
          <option value='checked' <% if @unchecked == "checked" %>selected<% end %>>チェック済</option>
          <option value='unchecked' <% if @unchecked == "unchecked" %>selected<% end %>>未チェック</option>
        </select>
      </div>
      <div class="col-auto row">
        <label class="col-auto col-form-label">男</label>
        <div class="col-auto">
          <select name='men' class="form-control">
          <%for cnt in 0..20 do%><option value='<%=cnt.to_s%>' <%
            if @men == cnt
              %>selected<%
            end
            %>><%=cnt.to_s%></option>
          <%end
          %></select> 
        </div>
      </div>
      <div class="col-auto row">
        <label class="col-auto col-form-label">女</label>
        <div class="col-auto">
          <select name='women' class="form-control col-auto">
          <%for cnt in 0..20 do%><option value='<%=cnt.to_s%>' <%
            if @women == cnt
              %>selected<%
            end
            %>><%=cnt.to_s%></option>
          <%end
          %></select>
        </div>
      </div>
      <div class="col-auto row">
        <label class="col-auto col-form-label">不問</label>
        <div class="col-auto">
          <select name='num' class="form-control col-auto">
          <%for cnt in 0..20 do%><option value='<%=cnt.to_s%>' <%
            if @num == cnt
              %>selected<%
            end
            %>><%=cnt.to_s%></option>
          <%end
          %></select>
        </div>
      </div>
      <div class="col-auto">
        <input type='submit' class="btn btn-sm btn-success" value="検索">
      </div>
      <div class="col-auto">
        <input class="form-check-imput" id="checkAther" type="checkbox" name="check" value="true" <%
        if @check == "true"
          %>checked="checked"<%
        end
        %>><label class="form-check-label" for="checkAther">融通</label>
      </div>
      <div class="col-auto">
        <input type='hidden' name='process' value='search'>
      </div>
      <div class="col-auto">
      <input type="text" id="search" class="form-control" title="簡易検索">
    </div>
    </form>
    
    
  </div>
</div>

<script>
$(document).ready(function(){
    $('#search')
    .blur(function(){
      var $$=$(this);
      if($$.val()=='' || $$.val()==$$.attr('title')){
      $$.css('color', '#999')
      .val($$.attr('title'));
      }
      })
    .focus(function(){
      var $$=$(this);
      if($$.val()==$$.attr('title')){
      $(this).css('color', '#000')
      .val('');
      }
      })
});
</script>
